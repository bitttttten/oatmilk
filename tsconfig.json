{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2017", "es7", "es6", "dom"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "outDir": "dist",
        "noEmit": true,
        "jsx": "react"
    },
    "include": ["src"]
}
